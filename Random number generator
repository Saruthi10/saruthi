#include <stdio.h>
#include <stdlib.h>
#include <time.h>

void generatePassword(int length) {
    // All possible characters for the password
    char characters[] = "ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        "abcdefghijklmnopqrstuvwxyz"
                        "0123456789"
                        "!@#$%^&*()_+[]{}|;:,.<>?";
    int charSetSize = sizeof(characters) - 1;

    char password[length + 1]; // +1 for null terminator

    for (int i = 0; i < length; i++) {
        password[i] = characters[rand() % charSetSize];
    }
    password[length] = '\0'; // Null terminate string

    printf("Generated Password: %s\n", password);
}

int main() {
    int length;

    printf("Enter desired password length: ");
    scanf("%d", &length);

    // Seed random number generator
    srand(time(NULL));

    generatePassword(length);

    return 0;
}
